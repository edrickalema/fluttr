{
  "expo": {
    "name": "Fluttr",
    "slug": "Fluttr",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon":  "./assets/images/fluttr_icon.png",
    "splash": {
      "image": "./assets/images/fluttr_splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "scheme": "fluttr",
    "userInterfaceStyle": "automatic",

    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/fluttr_icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.x19alema.Fluttr",
      "permissions": [
        "INTERNET",
        "READ_EXTERNAL_STORAGE",
        "SYSTEM_ALERT_WINDOW",
        "BIND_NOTIFICATION_LISTENER_SERVICE",
        "VIBRATE",
        "WRITE_EXTERNAL_STORAGE",
        "BIND_NOTIFICATION_LISTENER_SERVICE",
        "FOREGROUND_SERVICE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-dev-client",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/fluttr_splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
